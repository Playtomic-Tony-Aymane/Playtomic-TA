<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configure your match"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"/>

    <!-- Choose match type section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your type of match"
        android:textSize="16sp"
        android:padding="8dp"/>

    <CheckBox
        android:id="@+id/checkboxCompetitive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Competitive"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The result will affect your level and ranking"
        android:textSize="12sp"
        android:paddingStart="24dp"/>

    <CheckBox
        android:id="@+id/checkboxFriendly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friendly"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The result will not affect your level and ranking"
        android:textSize="12sp"
        android:paddingStart="24dp"/>

    <!-- Select gender section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the gender you want to play with:"
        android:textSize="16sp"
        android:padding="8dp"/>

    <CheckBox
        android:id="@+id/checkboxAllPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All players"/>

    <CheckBox
        android:id="@+id/checkboxOnlyMen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Only men"/>

    <CheckBox
        android:id="@+id/checkboxOnlyWomen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Only women"/>

    <!-- Button to start the match -->
    <Button
        android:id="@+id/buttonStartMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Match"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>
</LinearLayout>
